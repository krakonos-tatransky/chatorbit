# Backend configuration
CHAT_DATABASE_URL=sqlite:///./data/chat_orbit.db
CHAT_TOKEN_RATE_LIMIT_PER_HOUR=10
CHAT_CORS_ALLOWED_ORIGINS=http://localhost:3000
CHAT_CORS_ALLOW_CREDENTIALS=false

# Frontend URLs for LAN deployment
NEXT_PUBLIC_API_BASE_URL=http://192.168.1.16:50001
NEXT_PUBLIC_WS_BASE_URL=ws://192.168.1.16:50001

# WebRTC defaults used when no custom ICE servers are supplied
NEXT_PUBLIC_WEBRTC_DEFAULT_STUN_URLS=stun:stun.l.google.com:19302
NEXT_PUBLIC_WEBRTC_DEFAULT_TURN_URLS=turn:turn.i0i0i0.com:5349?transport=udp
NEXT_PUBLIC_WEBRTC_TURN_DEFAULT_USER=youruser
NEXT_PUBLIC_WEBRTC_TURN_DEFAULT_PASSWORD=yourpassword
