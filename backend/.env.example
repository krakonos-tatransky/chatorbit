# Optional overrides for the FastAPI service
CHAT_DATABASE_URL=sqlite:///./data/yourapp.db
CHAT_TOKEN_RATE_LIMIT_PER_HOUR=10
CHAT_DEFAULT_MESSAGE_CHAR_LIMIT=2000
CHAT_MAX_MESSAGE_CHAR_LIMIT=16000
CHAT_MIN_MESSAGE_CHAR_LIMIT=200
CHAT_CORS_ALLOWED_ORIGINS=https://yourserver.com,https://www.yourserver.com
CHAT_CORS_ALLOW_CREDENTIALS=false
CHAT_ENABLE_DOCS=false
CHAT_RUNTIME_DIRECTORY=../runtime
CHAT_RUNTIME_LOG_TO_FILE=true

# SMTP configuration for email notifications
CHAT_SMTP_HOST=smtp.example.com
CHAT_SMTP_PORT=587
CHAT_SMTP_USERNAME=your-smtp-username
CHAT_SMTP_PASSWORD=your-smtp-password
CHAT_SMTP_USE_TLS=true
CHAT_SMTP_USE_SSL=false
CHAT_SMTP_SENDER=notifications@example.com
CHAT_ABUSE_NOTIFICATIONS_EMAIL=abuse@example.com

# Admin authentication settings
CHAT_ADMIN_USERNAME=admin
# Generate a bcrypt hash using `python -c "import bcrypt; print(bcrypt.hashpw(b'supersecret', bcrypt.gensalt()).decode())"`
CHAT_ADMIN_PASSWORD_HASH=
CHAT_ADMIN_TOKEN_SECRET_KEY=change-me
CHAT_ADMIN_TOKEN_ALGORITHM=HS256
CHAT_ADMIN_TOKEN_EXPIRE_MINUTES=60
